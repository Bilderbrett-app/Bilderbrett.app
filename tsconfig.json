{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolvePackageJsonExports": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
